{
    "manifest_version": 3,
    "name": "Linkedin Helper",
    "version": "1.0",
    "description": "A simple Chrome extension.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon16.png",
        "128": "icons/icon16.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "downloads",
      "downloads.open",
      "tabs"
    ],
    "host_permissions": [
      "http://*/",
      "https://*/",
      "file://*/*"
    ]


}